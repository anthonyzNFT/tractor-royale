{
  "name": "tractor-royale-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "deploy": "turbo run build --filter=game-client && gh-pages -d packages/game-client/dist",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "optimize-assets": "node scripts/optimize-assets.js"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "gh-pages": "^6.2.0",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  }
}
